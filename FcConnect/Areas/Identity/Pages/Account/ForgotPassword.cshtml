@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgotten Password";
}
<div class="row g-0 mb-0">
    <div class="col d-flex align-items-center">
        @Html.Raw(Model.SvgContent)
        <h5 class="card-title quicksandText mt-4 pt-5">Forgotten Password</h5>
    </div>

</div>
<hr class="mt-2" />
<div class="row">
    <div class="col-sm-12 col-md-4">
        <form method="post">
            <p class="quicksandText mb-1">Please enter your email address</p>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control round" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
