@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="row d-flex justify-content-center mt-5">
    <div class="col">
        <div style="text-align:center;" class="svg-container">
            @Html.Raw(Model.SvgContent)
        </div>
    </div>
</div>

<div class="row d-flex justify-content-center">
    <div class="col-xs-12 col-sm-8 col-md-6 col-xl-4">
        <section>
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <h4 class="mb-0 mt-1 quicksandText">Welcome back</h4>
                </div>
                <div class="col-12 d-flex justify-content-center">
                    <p class="mb-0 quicksandText" style="color:darkslategrey">Please enter your details to sign in.</p>

                </div>
            </div>
            <form id="account" method="post">    
                <div class="mb-2">
                    <label asp-for="Input.Email" class="mb-0 quicksandText" id="welcomeText">Email</label>
                    <input asp-for="Input.Email" class="form-control round" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="mb-0 quicksandText" id="welcomeText">Password</label>
                    <input asp-for="Input.Password" class="form-control round" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-primary quicksandText">Sign in</button>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="w-100 mt-2 btn quicksandText">Forgotten your password?</a>
                </div>
                <div class="d-flex justify-content-center">
                    <p class="mt-1">
                        <!--  <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>-->
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
