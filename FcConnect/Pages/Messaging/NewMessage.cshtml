@page
@model FcConnect.Pages.Messaging.CreateModel

@{
    ViewData["Title"] = "New Message";

    List<SelectListItem> listUsers = new List<SelectListItem>();
    if (Model.UserTo != null)
    {
        foreach (var user in Model.UserTo)
        {
            listUsers.Add(new SelectListItem { Text = user.Forename.ToString() + " " + user.Surname.ToString(), Value = user.Id.ToString() });
        }
    }
}

<div class="row g-0 mb-2">
    <div class="col-sm-12 col-md-8 d-flex align-items-end">
        @Html.Raw(Model.SvgContent)
        <h5 class="card-title quicksandText">New <br />Message</h5>
    </div>
</div>
<hr class="mt-0" />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">To:</label>
                @Html.DropDownList("userToDrop", listUsers, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="Message.MessageContent" class="control-label">Message:</label>
                <textarea asp-for="Message.MessageContent" class="form-control"  ></textarea>
                <span asp-validation-for="Message.MessageContent" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary mt-3"> <i class="bi bi-send"></i> &nbsp;Send</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-3" asp-page="Messages"><i class="bi bi-x-circle-fill"></i> &nbsp;Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
