@page
@model FcConnect.Pages.Submissions.Manage.EditModel

@{
    ViewData["Title"] = "Edit";
}


<h4>Survey Submission</h4>
<p>User: @Model.SurveySubmission.User.Forename @Model.SurveySubmission.User.Surname - @Model.SurveySubmission.User.Email</p>
<p>Submitted: @Model.SurveySubmission.SubmittedDateTime.ToString("dd/MM/yyyy HH:mm")</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SurveySubmission.Id" />
            @for (int i = 0; i < Model.SurveyQuestions.Count; i++)
            {
                <p class="mb-0"><strong>@Model.SurveyQuestions.ElementAt(i).QuestionText</strong></p>
                <p>@Model.SurveySubmission.Answers.ElementAt(i).AnswerText</p>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
