@page
@model FcConnect.Pages.Submissions.IndexModel

@{
    ViewData["Title"] = "My Surveys";
}

<h4>My Surveys</h4>

@if (Model.SurveyUserLink.Count == 0)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-10 col-md-6 col-lg-4">
                <div style="text-align:center;" class="svg-container">
                    @Html.Raw(Model.SvgContent)
                </div>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-sm-12">
                <h1 id="caughtUpText">You're all caught up!</h1>
            </div>
        </div>
    </div>
    <style>
        /* CSS to make the SVG responsive */
        .svg-container {
            width: 100%;
            height: auto;   
        }

            /* Adjust SVG styling if necessary */
            .svg-container svg {
                width: 100%;
                height: auto;
            }
    </style>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Survey Name
                </th>
                <th>
                    Date Due
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int surveyNameIndex = 0;
            }
            @foreach (var item in Model.SurveyUserLink)
            {
                <tr class="align-content-center">
                    <td class="align-content-center">
                        @Model.SurveyNames[surveyNameIndex]
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateDue)
                    </td>
                    <td>
                        <strong class="text-danger">Outstanding</strong>
                    </td>
                    <td>
                        <a asp-page="./SubmitSurvey" asp-route-id="@item.Id" class="btn btn-primary" style="border-radius:25px;"><i class="bi bi-clipboard2-check-fill"></i> Submit Response</a>
                    </td>
                </tr>
                surveyNameIndex++;
            }
        </tbody>
    </table>
}


