@page
@model FcConnect.Pages.Surveys.Assign.IndexModel

@{
    ViewData["Title"] = "Assign Surveys";
}

<h4>Assign Surveys</h4>

<p>
    Select a user below to assign a survey     
</p>
<a asp-page="/Surveys/Index" class="btn btn-secondary mb-3"><i class="bi bi-box-arrow-left"></i> Back</a>    
    <form asp-page="./Index" method="get">
        <div class="form-actions no-color">
        <p>Find by name:</p><br />        
            <div class="row">
            <div class="col-sm-12 col-md-4 mb-3">
                    <input class="form-control " type="text" name="SearchString" value="@Model.CurrentFilter" />
                </div>
            <div class="col-sm-12 col-md-2 mb-3">
                <div class="d-grid gap-2 mx-auto">
                    <button type="submit" value="Search" class="btn btn-primary"><i class="bi bi-search"></i> Search</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

<table class="table">
    <thead>
        <tr>
            <th class="border-bottom" style="border-top-left-radius:10px;">
                @Html.DisplayNameFor(model => model.User[0].Forename)
            </th>
            <th class="border-bottom">
                @Html.DisplayNameFor(model => model.User[0].Surname)
            </th>
            <th class="border-bottom" style="border-top-right-radius:10px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Forename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                <a asp-page="./AssignSurvey" asp-route-id="@item.Id" class="btn btn-primary" style="border-radius:25px"><i class="bi bi-person-check-fill"></i> Assign</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary" style="border-radius:25px"><i class="bi bi-eye"></i> View Surveys</a>
            </td>
        </tr>
}
    </tbody>
</table>
