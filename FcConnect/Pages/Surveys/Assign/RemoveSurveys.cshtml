@page
@model FcConnect.Pages.Surveys.Assign.RemoveSurveysModel

@{
    ViewData["Title"] = "Remove Surveys";
}

<div class="row g-0 mb-0">
    <div class="col d-flex align-items-end">
        @Html.Raw(Model.SvgContent)
        <h5 class="card-title quicksandText">Remove <br /> Surveys</h5>
    </div>
    <div class="col d-flex align-items-end justify-content-end">
        <a asp-page="/Surveys/Assign/Index" class="btn btn-secondary mb-1"><i class="bi bi-arrow-left"></i>&nbsp; Back</a>
    </div>
</div>
<hr class="mt-0" />

<p><strong>User: </strong>@Model.User.Forename @Model.User.Surname - @Model.User.Email</p>

@if (Model.SurveyUserLink.Count == 0)
{
    <p class="text-danger">No surveys are assigned to this user</p>
}
else
{   

    <table class="table">
        <thead>
            <tr>
                <th id="tableHeaderLeft">
                    Survey Name
                </th>
                <th>
                    Next Due Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Survey Frequency
                </th>
                <th id="tableHeaderRight"></th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
    @foreach (var item in Model.SurveyUserLink) {
            <tr>
                <td class="align-middle">
                    @Model.Surveys.ElementAt(i).Name
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.DateDue)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.SurveyFrequency)
                </td>
                <td>
                    <a class="btn btn-danger" asp-page="./RemoveSurvey" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i>&nbsp;Remove</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}
