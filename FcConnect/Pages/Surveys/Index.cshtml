@page
@model FcConnect.Pages.Surveys.IndexModel

@{
    ViewData["Title"] = "Survey Management";
}

<h4>Survey Management</h4>

<p>
    <a style="display: inline-block; vertical-align: middle;" class="btn btn-primary text-center" asp-page="Create"><i class="bi bi-plus-circle"></i> Create New</a>
    <a class="btn btn-secondary" asp-page="Assign/Index"><i class="bi bi-person-fill-add"></i> Assign Survey</a>



</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Survey[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Survey) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary" style="border-radius: 20px;"><i class="bi bi-pencil-square"></i> View & Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger" style="border-radius: 20px;"><i class="bi bi-trash3-fill"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
