@page
@model FcConnect.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="row g-0 mb-2">
    <div class="col d-flex align-items-end">
        @Html.Raw(Model.SvgContent)
        <h5 class="card-title quicksandText mb-0">Delete <br />User</h5>
    </div>
    <div class="col d-flex align-items-end justify-content-end">
        <a asp-page="./Index" class="btn btn-secondary mb-1"><i class="bi bi-arrow-left-short"></i>&nbsp;Back</a>
    </div>
</div>
<hr class="mt-0" />

<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Forename)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Forename)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
    <p class="text-danger"><strong>Are you sure you want to delete this user?</strong></p>
    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash3-fill"></i>&nbsp;Delete</button>
    </form>
</div>
